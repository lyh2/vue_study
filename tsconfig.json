{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["dom", "esnext"],
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "noImplicitAny": false,
    "strict": true,
    "strictNullChecks": false,
    "paths": {
      "@/*": ["./src/*"]
    },
    "allowImportingTsExtensions": false,
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["src/**/*.ts", "src/**/*.vue", "src/**/*.js"],
  "exclude": ["node_modules"]
}
